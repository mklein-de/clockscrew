#!/bin/sh

if [ $# -lt 2 ]; then
	cat >&2 <<-EOF
	Usage: @PACKAGE@ <screw_spec> <command> [args]

	screw_spec := "@YYYY-MM-DD hh-mm-ss" | "[+-]<count>[smhdy]"

EOF
	exit 1
fi

if [ -n "$@PRELOAD_VAR@" ]; then
	@PRELOAD_VAR@=lib@PACKAGE@@SO_EXT@:$@PRELOAD_VAR@
else
	@PRELOAD_VAR@=lib@PACKAGE@@SO_EXT@
fi
export @PRELOAD_VAR@

@EXTRA_ENV@

@SCREW_ENV@="$1"
export @SCREW_ENV@
shift

"$@"
