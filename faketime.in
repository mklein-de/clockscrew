#!/bin/sh

if [ $# -lt 2 ]; then
	cat >&2 <<-EOF
	Usage: $0 <fake_spec> <command> [args]

	fake_spec := "@YYYY-MM-DD hh-mm-ss" | "[+-]<count>[smhdy]"

EOF
	exit 1
fi

if [ -n "$@PRELOAD_VAR@" ]; then
	@PRELOAD_VAR@=libfaketime@SO_EXT@:$@PRELOAD_VAR@
else
	@PRELOAD_VAR@=libfaketime@SO_EXT@
fi
export @PRELOAD_VAR@

@EXTRA_ENV@

FAKETIME=$1
export FAKETIME
shift

"$@"
